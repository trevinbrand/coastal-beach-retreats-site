---
import "../../styles/global.css";
import SiteHeader from "../../components/SiteHeader.astro";
import SiteFooter from "../../components/SiteFooter.astro";

const pageTitle = "Availability";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{pageTitle} | Coastal Beach Retreats</title>
    <meta
      name="description"
      content="Check availability for all Coastal Beach Retreats vacation rentals."
    />
  </head>

  <body>
    <SiteHeader phone="(918) 734-3331" />

    <main class="wrap">
      <!-- PAGE TITLE -->
      <header class="titlebar">
        <h1 class="h1">Availability</h1>
        <p class="sub">View real-time availability for all properties</p>
      </header>

      <!-- OWNERREZ RIBBON CALENDAR -->
      <section class="calendar" aria-label="Availability calendar">
        <div
          class="ownerrez-widget"
          data-widget-type="Ribbon Calendar"
          data-widgetId="c0baaf6aae2e40bead47d4ab7077009b"
        ></div>
      </section>
    </main>

    <SiteFooter phone="(918) 734-3331" email="coastalbeachretreats@gmail.com" />

    <!-- âœ… Load OwnerRez widget script ONCE -->
    <script is:inline src="https://app.ownerrez.com/widget.js"></script>

    <style>
      .wrap {
        max-width: 1440px;
        margin: 0 auto;
        padding: 16px 10px;
      }

      .titlebar {
        margin: 12px 0 18px;
        text-align: center;
      }

      .h1 {
        margin: 0 0 6px;
        font-size: 36px;
        color: var(--brand-blue, #193e7f);
      }

      .sub {
        margin: 0;
        opacity: 0.75;
      }

      .calendar {
        margin-top: 12px;
      }
    </style>
  </body>
</html>
