---
/**
 * FILE: src/pages/properties/red-sky-nights/index.astro
 * Layout matches Heavenly Hideaway:
 * - Photo collage at top (1 big left, 4 small right)
 * - Section nav row
 * - Below that: LEFT column = size + amenities lines + spaced description
 * - RIGHT column = OwnerRez Booking/Inquiry widget (sticky on desktop)
 * - Location section includes Google map (zoomed)
 * - Amenities section uses the table layout
 * - Reviews widget section
 * - Availability calendar at bottom
 */
import "../../../styles/global.css";
import SiteHeader from "../../../components/SiteHeader.astro";
import SiteFooter from "../../../components/SiteFooter.astro";

// âœ… Update these to your real images
const PHOTO_COUNT = 35;
const photosTop = [
  { src: "/images/props/red-sky/1002-hero.jpg", alt: "Living room with Gulf views" }, // big
  { src: "/images/props/red-sky/1002-living.jpg", alt: "Living area" },              // small 1
  { src: "/images/props/red-sky/1002-balcony.jpg", alt: "Balcony view" },            // small 2
  { src: "/images/props/red-sky/1002-dining.jpg", alt: "Dining area" },              // small 3
  { src: "/images/props/red-sky/1002-kitchen.jpg", alt: "Kitchen / open layout" },   // small 4
];

const pageTitle =
  "Red Sky Nights @ Edgewater Tower 1-1002 Panama City Beach, FL";
const subtitle =
  "Reduced rates, same amazing experience @ Edgewater.";

// These show ABOVE the description like your screenshot
const sizeLine = "2 Bedrooms â€¢ 2 Bathrooms â€¢ Sleeps 1-10";
const amenitiesLine = ["Internet", "Oceanfront", "Hot Tub"];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{pageTitle} | Coastal Beach Retreats</title>
    <meta
      name="description"
      content="Red Sky Nights at Edgewater Tower 1-1002 â€” photos, details, and booking."
    />
  </head>

  <body>
    <SiteHeader phone="(918) 734-3331" />

    <main class="wrap">
      <header class="titlebar">
        <h1 class="h1">{pageTitle}</h1>
        <p class="sub">{subtitle}</p>
      </header>

      <!-- PHOTO COLLAGE -->
      <section class="collage" id="photos" aria-label="Photo preview">
        <!-- BIG LEFT -->
        <a
          class="big"
          href="/properties/red-sky-nights/photos/"
          aria-label="View all photos"
        >
          <img src={photosTop[0].src} alt={photosTop[0].alt} loading="eager" />
        </a>

        <!-- RIGHT GRID -->
        <div class="smallGrid">
          <a class="small" href="/properties/red-sky-nights/photos/" aria-label="View all photos">
            <img src={photosTop[1].src} alt={photosTop[1].alt} loading="lazy" />
          </a>
          <a class="small" href="/properties/red-sky-nights/photos/" aria-label="View all photos">
            <img src={photosTop[2].src} alt={photosTop[2].alt} loading="lazy" />
          </a>
          <a class="small" href="/properties/red-sky-nights/photos/" aria-label="View all photos">
            <img src={photosTop[3].src} alt={photosTop[3].alt} loading="lazy" />
          </a>

          <!-- LAST TILE WITH PHOTO COUNT BADGE -->
          <a class="small last" href="/properties/red-sky-nights/photos/" aria-label="View all photos">
            <img src={photosTop[4].src} alt={photosTop[4].alt} loading="lazy" />
            <span class="countBadge" aria-label={`${PHOTO_COUNT} photos`}>
              <span class="cam" aria-hidden="true">ðŸ“·</span>
              {PHOTO_COUNT}
            </span>
          </a>
        </div>
      </section>

      <!-- SECTION NAV ROW -->
      <nav class="subnav" aria-label="Page sections">
        <a href="#photos">PHOTOS</a>
        <a href="#details">DETAILS</a>
        <a href="#availability">AVAILABILITY</a>
        <a href="#location">LOCATION</a>
        <a href="#amenities">AMENITIES</a>
        <a href="#reviews">REVIEWS</a>
      </nav>

      <!-- DETAILS + BOOKING WIDGET -->
      <section class="below" id="details" aria-label="Details and booking">
        <!-- LEFT -->
        <div class="desc">
          <div class="metaLine">
            <span class="metaLabel">Size â€“</span>
            <span>{sizeLine}</span>
          </div>

          <div class="metaLine">
            <span class="metaLabel">Amenities â€“</span>
            <span class="amenInline">
              {amenitiesLine.map((a, i) => (
                <>
                  <span class="chip">{a}</span>
                  {i < amenitiesLine.length - 1 ? <span class="dot">â€¢</span> : null}
                </>
              ))}
              <a class="more" href="#amenities">(more...)</a>
            </span>
          </div>

          <!-- âœ… SPACED DESCRIPTION -->
          <div class="longDesc">
            <p>
              Coastal Beach Retreats is excited to present Red Sky Nights â€” a gorgeous Gulf-front
              condo located in Tower 1 at the one-and-only Edgewater Beach &amp; Golf Resort.
            </p>

            <p>
              <strong>The nightly rate covers parking for up to two vehicles during your visit.</strong>
            </p>

            <p>
              Wake up to sweeping Gulf views and enjoy the resortâ€™s famous lagoon pool, hot tubs,
              beach access, and on-site dining â€” all right outside your door. Red Sky Nights is set
              up for families and groups, with comfortable sleeping for up to 10 guests and plenty
              of space to relax after a beach day.
            </p>

            <p>
              Primary renter must be at least 25 years old, sign a rental agreement within 48 hours
              of booking, be present for the duration of the stay, and agree to a $200 damage hold
              placed on a debit/credit card in the renter's name. No smoking or parties allowed.
              Booking includes the resort's fee and up to two vehicles. We provide starter amounts
              of soaps and paper products (like toilet paper, paper towels, and trash bags). Please
              plan to bring/buy additional if your stay is longer than a couple of days.
            </p>

            <p>
              Edgewater is Panama City Beach's ONLY full-service resort. Beachside youâ€™ll find a
              full restaurant, tiki bar, huge oceanside lagoon pool, kids splash area, Starbucks,
              market, ice cream parlor, 4 hot tubs, water sports/activities, beach chair service
              (pool and beach), and more. Across the pedestrian bridge is a 9-hole golf course and
              Pro Shop plus fitness, tennis, pickleball, and more.
            </p>
          </div>
        </div>

        <!-- RIGHT: booking widget -->
        <aside class="book">
          <div class="bookInner">
            <!-- âœ… OwnerRez Booking/Inquiry widget for Red Sky Nights -->
            <div
              class="ownerrez-widget"
              data-propertyId="REPLACE_WITH_RED_SKY_PROPERTY_ID"
              data-widget-type="Booking/Inquiry"
              data-widgetId="REPLACE_WITH_RED_SKY_BOOKING_WIDGET_ID"
            ></div>
            <script is:inline src="https://app.ownerrez.com/widget.js"></script>
          </div>
        </aside>
      </section>

      <!-- LOCATION -->
      <section id="location" class="card">
        <h2 class="h2">Location</h2>
        <p>
          Edgewater Beach &amp; Golf Resort â€¢ Tower 1 â€¢ Panama City Beach, FL<br />
          11212 Front Beach Rd, Tower 1 (T1-1002) Panama City Beach, FL 32407
        </p>

        <!-- âœ… MAP (Tower 1 + zoomed) -->
        <div class="mapWrap" aria-label="Map">
          <iframe
            title="Map: Edgewater Tower 1 (11212 Front Beach Rd, Panama City Beach, FL 32407)"
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            allowfullscreen
            src="https://www.google.com/maps?q=Edgewater%20Beach%20%26%20Golf%20Resort%20Tower%201,%2011212%20Front%20Beach%20Rd,%20Panama%20City%20Beach,%20FL%2032407&z=19&output=embed"
          ></iframe>

          <a
            class="mapLink"
            href="https://www.google.com/maps/search/?api=1&query=Edgewater%20Beach%20%26%20Golf%20Resort%20Tower%201,%2011212%20Front%20Beach%20Rd,%20Panama%20City%20Beach,%20FL%2032407"
            target="_blank"
            rel="noopener"
          >
            View on Google Maps â†’
          </a>
        </div>
      </section>

      <!-- AMENITIES -->
      <section id="amenities" class="card">
        <h2 class="h2">&ensp;Amenities</h2>

        <!-- âœ… Copy/paste this section and adjust specifics if Red Sky differs -->
        <div class="amenities-table">
          <div class="amen-row">
            <div class="amen-label">Property Type</div>
            <div class="amen-value">Condo</div>
          </div>

          <div class="amen-row">
            <div class="amen-label">Check-In</div>
            <div class="amen-value">Keypad entry (24/7)</div>
          </div>

          <div class="amen-row">
            <div class="amen-label">Elevator</div>
            <div class="amen-value">Yes</div>
          </div>

          <div class="amen-row">
            <div class="amen-label">House Rules</div>
            <div class="amen-value columns">
              <span>Maximum occupancy: 10</span>
              <span>Children welcome</span>
              <span>Infants welcome</span>
              <span>Smoking not allowed</span>
              <span>Pets not allowed</span>
              <span>Wheelchair inaccessible</span>
              <span>Minimum age of primary renter: 25</span>
            </div>
          </div>

          <div class="amen-row">
            <div class="amen-label">Setting &amp; View</div>
            <div class="amen-value columns">
              <span>Oceanfront</span>
              <span>Ocean View</span>
              <span>Beachfront</span>
              <span>Resort View</span>
              <span>Shared Beach Access</span>
              <span>Resort Access</span>
            </div>
          </div>

          <div class="amen-row">
            <div class="amen-label">General</div>
            <div class="amen-value columns">
              <span>Internet</span>
              <span>High-speed WiFi</span>
              <span>Air Conditioning</span>
              <span>Central Heating</span>
              <span>Linens Provided</span>
              <span>Towels Provided</span>
              <span>Washing Machine</span>
              <span>Clothes Dryer</span>
              <span>Hair Dryer</span>
              <span>Iron &amp; Board</span>
              <span>Ceiling Fans</span>
              <span>Laptop-Friendly Workspace</span>
            </div>
          </div>

          <div class="amen-row">
            <div class="amen-label">Kitchen</div>
            <div class="amen-value columns">
              <span>Refrigerator</span>
              <span>Stove</span>
              <span>Oven</span>
              <span>Microwave</span>
              <span>Dishwasher</span>
              <span>Dishes &amp; utensils</span>
              <span>Coffee maker</span>
              <span>Toaster</span>
              <span>Freezer</span>
              <span>Pots &amp; pans</span>
              <span>Wine glasses</span>
            </div>
          </div>

          <div class="amen-row">
            <div class="amen-label">Pool &amp; Spa</div>
            <div class="amen-value columns">
              <span>Communal pool</span>
              <span>Heated pool</span>
              <span>Hot tub</span>
              <span>Jacuzzi</span>
            </div>
          </div>

          <div class="amen-row">
            <div class="amen-label">Outdoor</div>
            <div class="amen-value columns">
              <span>Balcony/Terrace</span>
              <span>Outdoor seating</span>
              <span>Beach essentials</span>
              <span>Tennis</span>
              <span>Walkable to golf</span>
            </div>
          </div>

          <div class="amen-row">
            <div class="amen-label">Safety</div>
            <div class="amen-value columns">
              <span>Smoke detector</span>
              <span>Fire extinguisher</span>
              <span>First aid kit</span>
              <span>Exterior lighting</span>
              <span>Enhanced cleaning practices</span>
            </div>
          </div>
        </div>
      </section>

      <!-- REVIEWS -->
      <section id="reviews" class="card">
        <h2 class="h2">Reviews</h2>

        <div
          class="ownerrez-widget"
          data-widget-type="Reviews - Reviews"
          data-widgetId="4bf99f90fcf54552a13fd7315759dbca"
        ></div>

        <script is:inline src="https://app.ownerrez.com/widget.js"></script>
      </section>

      <!-- AVAILABILITY -->
      <section id="availability" class="card">
        <h2 class="h2">Availability</h2>

        <!-- âœ… OwnerRez Multiple Month Calendar widget for Red Sky Nights -->
        <div
          class="ownerrez-widget"
          data-widgetId="REPLACE_WITH_RED_SKY_CAL_WIDGET_ID"
          data-propertyId="REPLACE_WITH_RED_SKY_PROPERTY_ID"
          data-widget-type="Multiple Month Calendar"
        ></div>

        <script is:inline type="text/javascript" src="https://app.ownerrez.com/widget.js"></script>
      </section>
    </main>

    <SiteFooter phone="(918) 734-3331" email="coastalbeachretreats@gmail.com" />

    <style>
      .wrap {
        max-width: 1440px;
        margin: 0 auto;
        padding: 12px 10px;
      }

      .titlebar { margin: 10px 0 14px; }
      .h1 {
        margin: 0 0 6px;
        font-size: 34px;
        line-height: 1.1;
        color: var(--brand-blue, #193e7f);
      }
      .sub { margin: 0; opacity: .85; }

      /* Collage */
      .collage {
        display: grid;
        grid-template-columns: 1.55fr 1fr;
        gap: 2px;
        margin: 14px 0 12px;
      }

      .big, .small {
        display: block;
        border-radius: 0;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,.12);
        background: rgba(0,0,0,.04);
        text-decoration: none;
        position: relative;
      }

      .big img {
        width: 100%;
        height: 420px;
        object-fit: cover;
        display: block;
      }

      .smallGrid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2px;
      }

      .small img {
        width: 100%;
        height: 205px;
        object-fit: cover;
        display: block;
      }

      .countBadge {
        position: absolute;
        right: 10px;
        bottom: 10px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 10px;
        border-radius: 12px;
        background: rgba(0,0,0,.55);
        color: #fff;
        font-weight: 800;
        border: 1px solid rgba(255,255,255,.18);
        backdrop-filter: blur(6px);
      }
      .cam { font-size: 16px; }

      /* subnav row */
      .subnav {
        display: flex;
        gap: 22px;
        align-items: center;
        padding: 14px 4px 8px;
        border-bottom: 1px solid rgba(0,0,0,.10);
        margin-bottom: 14px;
        flex-wrap: wrap;
      }
      .subnav a {
        text-decoration: none;
        font-weight: 800;
        letter-spacing: .08em;
        font-size: 14px;
        color: rgba(25,62,127,.75);
      }
      .subnav a:hover { color: var(--brand-blue, #193e7f); }

      /* description + widget area */
      .below {
        display: grid;
        grid-template-columns: 1.6fr 1fr;
        gap: 22px;
        align-items: start;
        margin: 8px 0 18px;
      }

      .desc { padding-right: 6px; }

      .metaLine {
        display: flex;
        align-items: baseline;
        gap: 10px;
        margin: 10px 0;
        font-size: 20px;
        line-height: 1.25;
      }

      .metaLabel {
        font-family: var(--font-heading, "Dancing Script", cursive);
        color: var(--accent-teal, #058789);
        font-weight: 700;
        font-size: 24px;
        white-space: nowrap;
      }

      .amenInline {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        flex-wrap: wrap;
      }

      .chip { font-weight: 600; }
      .dot { opacity: .55; }

      .more {
        text-decoration: none;
        font-weight: 700;
        color: rgba(25,62,127,.75);
      }
      .more:hover { color: var(--brand-blue, #193e7f); }

      .longDesc p {
        font-size: 16px;
        line-height: 1.75;
        margin: 14px 0;
      }

      .bookInner {
        position: sticky;
        top: 92px;
        border: 1px solid rgba(0,0,0,.12);
        border-radius: 16px;
        padding: 14px;
        background: #fff;
        box-shadow: 0 6px 18px rgba(0,0,0,.06);
      }

      /* cards */
      .card {
        border: 1px solid rgba(0,0,0,.12);
        border-radius: 16px;
        padding: 14px;
        background: #fff;
        box-shadow: 0 6px 18px rgba(0,0,0,.06);
        margin-bottom: 14px;
      }

      .h2 {
        margin: 0 0 10px;
        font-size: 24px;
        color: var(--brand-blue, #193e7f);
      }

      /* map */
      .mapWrap {
        margin-top: 12px;
        border-radius: 14px;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,.12);
        background: #fff;
      }
      .mapWrap iframe {
        width: 100%;
        height: 360px;
        border: 0;
        display: block;
      }
      .mapLink {
        display: block;
        padding: 10px 12px;
        text-align: right;
        font-weight: 800;
        text-decoration: none;
        color: rgba(25,62,127,.85);
      }
      .mapLink:hover { color: var(--brand-blue, #193e7f); }

      /* amenities table */
      .amenities-table {
        margin-top: 8px;
        border-radius: 14px;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,.10);
        background: #fff;
      }

      .amen-row {
        display: grid;
        grid-template-columns: 240px 1fr;
        gap: 18px;
        padding: 18px 18px;
        border-top: 1px solid rgba(0,0,0,.08);
      }
      .amen-row:first-child { border-top: 0; }

      .amen-label { font-weight: 800; color: #111; }
      .amen-value { color: #111; }

      .amen-value.columns {
        display: grid;
        grid-template-columns: repeat(4, minmax(180px, 1fr));
        gap: 8px 18px;
      }

      @media (max-width: 980px) {
        .wrap { padding: 12px 12px; }
        .collage { grid-template-columns: 1fr; }
        .big img { height: 320px; }
        .small img { height: 160px; }
        .below { grid-template-columns: 1fr; }
        .bookInner { position: static; }
        .mapWrap iframe { height: 300px; }

        .amen-row { grid-template-columns: 1fr; }
        .amen-value.columns { grid-template-columns: repeat(2, minmax(160px, 1fr)); }
      }

      @media (max-width: 520px) {
        .amen-value.columns { grid-template-columns: 1fr; }
      }
    </style>
  </body>
</html>
