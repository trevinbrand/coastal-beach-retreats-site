---
/**
 * FILE: src/pages/properties/heavenly-hideaway/index.astro
 * Layout matches your screenshot:
 * - Photo collage at top (1 big left, 4 small right)
 * - Section nav row
 * - Below that: LEFT column = size + amenities lines + spaced description
 * - RIGHT column = OwnerRez Booking/Inquiry widget (sticky on desktop)
 * - Availability calendar stays at the bottom (Multiple Month Calendar widget)
 *
 * ‚úÖ FIX ADDED:
 * The page felt ‚Äúskinny‚Äù on large screens due to max-width: 1120px.
 * This version reduces the white space by widening the container to 1440px
 * and slightly reducing side padding.
 */
import "../../../styles/global.css";
import SiteHeader from "../../../components/SiteHeader.astro";
import SiteFooter from "../../../components/SiteFooter.astro";

// ‚úÖ Update these to your real images
const PHOTO_COUNT = 35;
const photosTop = [
  { src: "/images/props/heavenly-1106.jpg", alt: "Living room with Gulf views" }, // big
  { src: "/images/props/heavenly-1106-2.jpg", alt: "Living area" },              // small 1
  { src: "/images/props/heavenly-1106-3.jpg", alt: "Balcony view" },             // small 2
  { src: "/images/props/heavenly-1106-4.jpg", alt: "Dining area" },              // small 3
  { src: "/images/props/heavenly-1106-5.jpg", alt: "Kitchen / open layout" },    // small 4
];

const pageTitle =
  "Heavenly Hideaway @ Edgewater Tower 1-1106 Panama City Beach, FL";
const subtitle =
  "Reduced rates during temporary property enhancements ‚Äî same amazing experience @ Edgewater.";

// These show ABOVE the description like your screenshot
const sizeLine = "2 Bedrooms ‚Ä¢ 2 Bathrooms ‚Ä¢ Sleeps 1-10";
const amenitiesLine = ["Internet", "Oceanfront", "Hot Tub"];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{pageTitle} | Coastal Beach Retreats</title>
    <meta
      name="description"
      content="Heavenly Hideaway at Edgewater Tower 1-1106 ‚Äî photos, details, and booking."
    />
  </head>

  <body>
    <SiteHeader phone="(918) 734-3331" />

    <main class="wrap">
      <header class="titlebar">
        <h1 class="h1">{pageTitle}</h1>
        <p class="sub">{subtitle}</p>
      </header>

      <!-- PHOTO COLLAGE -->
      <section class="collage" id="photos" aria-label="Photo preview">
        <!-- BIG LEFT -->
        <a
          class="big"
          href="/properties/heavenly-hideaway/photos/"
          aria-label="View all photos"
        >
          <img src={photosTop[0].src} alt={photosTop[0].alt} loading="eager" />
        </a>

        <!-- RIGHT GRID -->
        <div class="smallGrid">
          <a class="small" href="/properties/heavenly-hideaway/photos/" aria-label="View all photos">
            <img src={photosTop[1].src} alt={photosTop[1].alt} loading="lazy" />
          </a>
          <a class="small" href="/properties/heavenly-hideaway/photos/" aria-label="View all photos">
            <img src={photosTop[2].src} alt={photosTop[2].alt} loading="lazy" />
          </a>
          <a class="small" href="/properties/heavenly-hideaway/photos/" aria-label="View all photos">
            <img src={photosTop[3].src} alt={photosTop[3].alt} loading="lazy" />
          </a>

          <!-- LAST TILE WITH PHOTO COUNT BADGE -->
          <a class="small last" href="/properties/heavenly-hideaway/photos/" aria-label="View all photos">
            <img src={photosTop[4].src} alt={photosTop[4].alt} loading="lazy" />
            <span class="countBadge" aria-label={`${PHOTO_COUNT} photos`}>
              <span class="cam" aria-hidden="true">üì∑</span>
              {PHOTO_COUNT}
            </span>
          </a>
        </div>
      </section>

      <!-- SECTION NAV ROW -->
      <nav class="subnav" aria-label="Page sections">
        <a href="#photos">PHOTOS</a>
        <a href="#details">DETAILS</a>
        <a href="#availability">AVAILABILITY</a>
        <a href="#location">LOCATION</a>
        <a href="#amenities">AMENITIES</a>
        <a href="#reviews">REVIEWS</a>
      </nav>

      <!-- DETAILS + BOOKING WIDGET (MATCHES SCREENSHOT) -->
      <section class="below" id="details" aria-label="Details and booking">
        <!-- LEFT: size + amenities + description -->
        <div class="desc">
          <div class="metaLine">
            <span class="metaLabel">Size ‚Äì</span>
            <span>{sizeLine}</span>
          </div>

          <div class="metaLine">
            <span class="metaLabel">Amenities ‚Äì</span>
            <span class="amenInline">
              {amenitiesLine.map((a, i) => (
                <>
                  <span class="chip">{a}</span>
                  {i < amenitiesLine.length - 1 ? <span class="dot">‚Ä¢</span> : null}
                </>
              ))}
              <a class="more" href="#amenities">(more...)</a>
            </span>
          </div>

          <!-- ‚úÖ SPACED DESCRIPTION (no JS consts needed) -->
          <div class="longDesc">
            <p>
              Coastal Beach Retreats is excited to present this eleventh-floor condo located in
              Tower 1 at the one-and-only Edgewater Beach &amp; Golf Resort.
            </p>

            <p>
              <strong>The nightly rate covers parking for up to two vehicles during your visit.</strong>
            </p>

            <p>
              Discover the ultimate beachfront retreat at Edgewater T1-1106, a beautiful 2-bedroom,
              2-bathroom condo, with hall bunks located within the prestigious Edgewater Beach and
              Golf Resort. Positioned on the 11th floor, this residence boasts panoramic Gulf views
              and overlooks the resort‚Äôs lagoon pool from its expansive balcony. Inside, the living
              room showcases impressive floor-to-ceiling windows, while the tasteful d√©cor and
              elegant quartz countertops throughout create a warm, inviting atmosphere. The master
              bathroom is a sanctuary, featuring a shower tower with massaging jets and LED lighting
              for a rejuvenating experience. With updated cabinetry and stylish vinyl flooring, this
              condo exudes modern sophistication. The custom-designed refrigerator with eye-catching
              colored panels complements the kitchen‚Äôs tile perfectly. Enjoy your days at the beach
              with ease: six comfortable beach chairs, a beach umbrella, eight beach towels, and a
              Tommy Bahama shoulder ice chest are provided for your convenience, so you can relax
              and soak up the sun without any extra hassle. Accommodating up to 10 guests, the condo
              offers a king bed in the master bedroom, a queen bed and twin bunk beds in the guest
              room, twin-over-full bunk beds in the hallway, and a pull-out sleeper sofa for extra
              sleeping space. Entertainment is a breeze with Roku TVs in every bedroom and the living
              room, plus 32&quot; Roku TVs in the hallway bunks. The balcony features four comfortable
              Polywood chairs for enjoying the stunning views, and a new LG stackable washer and dryer
              ensure added convenience. Enjoy the Gulf-front setting, take a dip in the lagoon pool,
              and explore the many activities offered at Edgewater 1-1106 in Edgewater Beach &amp; Golf
              Resort!
            </p>

            <p>
              Primary renter must be at least 25 years old, sign a rental agreement within 48 hours
              of booking, be present for the duration of the stay, and agree to a $200 damage hold
              placed on a debit/credit card in the renter's name. No smoking or parties allowed.
              Booking includes the resort's fee and up to two vehicles. This property has a Ring
              peephole camera installed in the front door, providing added security by recording
              activity outside the entrance. We provide starter amounts of soaps and paper products
              (like toilet paper, paper towels, and trash bags). Please plan to bring/buy additional
              if your stay is longer than a couple of days.
            </p>

            <p>
              The luxurious Edgewater Beach &amp; Golf Resort is Panama City Beach's ONLY full-service
              resort. Beachside you‚Äôll find a full restaurant, tiki bar, huge oceanside lagoon pool,
              kids splash area, Starbucks, market, ice cream parlor, 4 hot tubs, water sports/activities,
              beach chair service (pool and beach), and more. Across the resort pedestrian bridge is a
              9-hole golf course and Pro Shop. Enjoy complimentary access to a range of top-tier amenities
              at the resort, including the fitness center, basketball court, tennis courts, shuffleboard,
              and pickleball courts.
            </p>

            <p>
              Just outside the 24/7/365 manned-security-gates of the resort is a multitude of additional
              walkable restaurants‚Äîeverything from NY style pizza to high-end seafood, an American eatery,
              a Cajun cafe, Mexican restaurant, and even a Subway and Waffle House.
            </p>
          </div>
        </div>

        <!-- RIGHT: booking widget -->
        <aside class="book">
          <div class="bookInner">
            <div
              class="ownerrez-widget"
              data-propertyId="ddffb4e693c740d4b264b6a60773d8df"
              data-widget-type="Booking/Inquiry"
              data-widgetId="a8281cc150054c85a38547dbd1cdcbb8"
            ></div>
            <script is:inline src="https://app.ownerrez.com/widget.js"></script>
          </div>
        </aside>
      </section>

      <!-- LOCATION -->
      <section id="location" class="card">
        <h2 class="h2">Location</h2>
        <p>
          Edgewater Beach &amp; Golf Resort ‚Ä¢ Tower 1 ‚Ä¢ Panama City Beach, FL<br />
          11212 Front Beach Rd, Panama City Beach, FL 32407
        </p>

        <!-- ‚úÖ MAP (Tower 1 + very zoomed in) -->
        <div class="mapWrap" aria-label="Map">
          <iframe
            title="Map: Edgewater Tower 1 (11212 Front Beach Rd, Panama City Beach, FL 32407)"
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            allowfullscreen
            src="https://www.google.com/maps?q=Edgewater%20Beach%20%26%20Golf%20Resort%20Tower%201,%2011212%20Front%20Beach%20Rd,%20Panama%20City%20Beach,%20FL%2032407&z=18&output=embed"
          ></iframe>

          <a
            class="mapLink"
            href="https://www.google.com/maps/search/?api=1&query=Edgewater%20Beach%20%26%20Golf%20Resort%20Tower%201,%2011212%20Front%20Beach%20Rd,%20Panama%20City%20Beach,%20FL%2032407"
            target="_blank"
            rel="noopener"
          >
            View on Google Maps ‚Üí
          </a>
        </div>
      </section>

      <!-- AMENITIES -->
      <section id="amenities" class="card">
        <h2 class="h2">Amenities</h2>
        <div class="amenitiesGrid">
          <span>High-speed WiFi</span>
          <span>Beach access</span>
          <span>Lagoon pool</span>
          <span>Hot tubs</span>
          <span>Fitness center</span>
          <span>Tennis / pickleball</span>
          <span>Washer / dryer</span>
          <span>Fully stocked kitchen</span>
        </div>
      </section>

      <!-- REVIEWS -->
      <section id="reviews" class="card">
        <h2 class="h2">Reviews</h2>
        <p class="muted">Insert your OwnerRez reviews widget here if you want.</p>
      </section>

      <!-- AVAILABILITY (BOTTOM) -->
      <section id="availability" class="card">
        <h2 class="h2">Availability</h2>

        <div
          class="ownerrez-widget"
          data-widgetId="7789bd19d45c4d2f87a8e7e3a0d69734"
          data-propertyId="ddffb4e693c740d4b264b6a60773d8df"
          data-widget-type="Multiple Month Calendar"
        ></div>

        <script is:inline type="text/javascript" src="https://app.ownerrez.com/widget.js"></script>
      </section>
    </main>

    <SiteFooter phone="(918) 734-3331" email="coastalbeachretreats@gmail.com" />

    <style>
      /* ‚úÖ FIX: reduce white space on large screens */
      .wrap {
        max-width: 1440px;   /* was 1120px */
        margin: 0 auto;
        padding: 12px 10px;  /* smaller left/right padding */
      }

      .titlebar { margin: 10px 0 14px; }
      .h1 {
        margin: 0 0 6px;
        font-size: 34px;
        line-height: 1.1;
        color: var(--brand-blue, #193e7f);
      }
      .sub { margin: 0; opacity: .85; }

      /* Collage */
      .collage {
        display: grid;
        grid-template-columns: 1.55fr 1fr;
        gap: 10px;
        margin: 14px 0 12px;
      }

      .big, .small {
        display: block;
        border-radius: 12px;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,.12);
        background: rgba(0,0,0,.04);
        text-decoration: none;
        position: relative;
      }

      .big img {
        width: 100%;
        height: 420px;
        object-fit: cover;
        display: block;
      }

      .smallGrid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
      }

      .small img {
        width: 100%;
        height: 205px;
        object-fit: cover;
        display: block;
      }

      .countBadge {
        position: absolute;
        right: 10px;
        bottom: 10px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 10px;
        border-radius: 12px;
        background: rgba(0,0,0,.55);
        color: #fff;
        font-weight: 800;
        border: 1px solid rgba(255,255,255,.18);
        backdrop-filter: blur(6px);
      }
      .cam { font-size: 16px; }

      /* subnav row */
      .subnav {
        display: flex;
        gap: 22px;
        align-items: center;
        padding: 14px 4px 8px;
        border-bottom: 1px solid rgba(0,0,0,.10);
        margin-bottom: 14px;
        flex-wrap: wrap;
      }
      .subnav a {
        text-decoration: none;
        font-weight: 800;
        letter-spacing: .08em;
        font-size: 14px;
        color: rgba(25,62,127,.75);
      }
      .subnav a:hover { color: var(--brand-blue, #193e7f); }

      /* description + widget area */
      .below {
        display: grid;
        grid-template-columns: 1.6fr 1fr;
        gap: 22px;
        align-items: start;
        margin: 8px 0 18px;
      }

      .desc { padding-right: 6px; }

      .metaLine {
        display: flex;
        align-items: baseline;
        gap: 10px;
        margin: 10px 0;
        font-size: 20px;
        line-height: 1.25;
      }

      .metaLabel {
        font-family: var(--font-heading, "Dancing Script", cursive);
        color: var(--accent-teal, #058789);
        font-weight: 700;
        font-size: 24px;
        white-space: nowrap;
      }

      .amenInline {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        flex-wrap: wrap;
      }

      .chip { font-weight: 600; }
      .dot { opacity: .55; }

      .more {
        text-decoration: none;
        font-weight: 700;
        color: rgba(25,62,127,.75);
      }
      .more:hover { color: var(--brand-blue, #193e7f); }

      .longDesc p {
        font-size: 18px;
        line-height: 1.75;
        margin: 14px 0;
      }

      .bookInner {
        position: sticky;
        top: 92px;
        border: 1px solid rgba(0,0,0,.12);
        border-radius: 16px;
        padding: 14px;
        background: #fff;
        box-shadow: 0 6px 18px rgba(0,0,0,.06);
      }

      /* section cards below */
      .card {
        border: 1px solid rgba(0,0,0,.12);
        border-radius: 16px;
        padding: 14px;
        background: #fff;
        box-shadow: 0 6px 18px rgba(0,0,0,.06);
        margin-bottom: 14px;
      }

      .h2 {
        margin: 0 0 10px;
        font-size: 24px;
        color: var(--brand-blue, #193e7f);
      }

      .amenitiesGrid {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
      }
      .amenitiesGrid span {
        padding: 8px 10px;
        border-radius: 999px;
        border: 1px solid rgba(0,0,0,.14);
        background: rgba(0,0,0,.03);
        font-weight: 600;
        font-size: 14px;
      }

      .muted { opacity: .8; }

      /* ‚úÖ MAP styles */
      .mapWrap {
        margin-top: 12px;
        border-radius: 14px;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,.12);
        background: #fff;
      }
      .mapWrap iframe {
        width: 100%;
        height: 360px;
        border: 0;
        display: block;
      }
      .mapLink {
        display: block;
        padding: 10px 12px;
        text-align: right;
        font-weight: 800;
        text-decoration: none;
        color: rgba(25,62,127,.85);
      }
      .mapLink:hover { color: var(--brand-blue, #193e7f); }

      @media (max-width: 980px) {
        .wrap { padding: 12px 12px; }
        .collage { grid-template-columns: 1fr; }
        .big img { height: 320px; }
        .small img { height: 160px; }
        .below { grid-template-columns: 1fr; }
        .bookInner { position: static; }
        .mapWrap iframe { height: 300px; }
      }
    </style>
  </body>
</html>
