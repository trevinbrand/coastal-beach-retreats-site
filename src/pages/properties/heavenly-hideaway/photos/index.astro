---
import "../../../../styles/global.css";
import SiteHeader from "../../../../components/SiteHeader.astro";
import SiteFooter from "../../../../components/SiteFooter.astro";

// ✅ Replace with your full list of photos (35)
const photos = Array.from({ length: 35 }).map((_, i) => ({
  // Example: /images/heavenly-hideaway/01.jpg ...
  src: `/images/heavenly-hideaway/${String(i + 1).padStart(2, "0")}.jpg`,
  alt: `Heavenly Hideaway photo ${i + 1}`,
}));

const pageTitle = "Heavenly Hideaway — All Photos";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{pageTitle} | Coastal Beach Retreats</title>
    <meta name="description" content="All photos for Heavenly Hideaway." />
  </head>

  <body>
    <SiteHeader phone="(918) 734-3331" />

    <main class="wrap">
      <div class="toprow">
        <h1 class="h1">{pageTitle}</h1>
        <a class="back" href="/properties/heavenly-hideaway/#photos">← Back to property</a>
      </div>

      <section class="grid" aria-label="All photos">
        {photos.map((p) => (
          <a class="tile" href={p.src} target="_blank" rel="noopener">
            <img src={p.src} alt={p.alt} loading="lazy" />
          </a>
        ))}
      </section>
    </main>

    <SiteFooter phone="(918) 734-3331" email="coastalbeachretreats@gmail.com" />

    <style>
      .wrap { max-width: 1120px; margin: 0 auto; padding: 14px; }
      .toprow { display:flex; align-items:baseline; justify-content:space-between; gap:12px; flex-wrap:wrap; }
      .h1 { margin: 10px 0 6px; font-size: 32px; color: var(--brand-blue, #193e7f); }
      .back { text-decoration:none; font-weight:700; }

      .grid {
        margin-top: 14px;
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 10px;
      }

      .tile {
        display:block;
        border-radius: 12px;
        overflow:hidden;
        border: 1px solid rgba(0,0,0,.12);
        background: rgba(0,0,0,.04);
      }
      .tile img { width:100%; height: 180px; object-fit:cover; display:block; }

      @media (max-width: 1000px) { .grid { grid-template-columns: repeat(3, 1fr); } }
      @media (max-width: 720px)  { .grid { grid-template-columns: repeat(2, 1fr); } .tile img { height: 160px; } }
    </style>
  </body>
</html>
