---
import "../../styles/global.css";
import SiteHeader from "../../components/SiteHeader.astro";
import SiteFooter from "../../components/SiteFooter.astro";

const tours = [
  {
    id: "tour-1",
    title: "Sailor's Delight",
    src: "https://my.matterport.com/show/?m=sWTDXz3dNYY",
  },
  {
    id: "tour-2",
    title: "Red Sky Nights",
    src: "https://my.matterport.com/show/?m=eSNyvX85pic",
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>3D Condo Tours | Coastal Beach Retreats</title>
    <meta
      name="description"
      content="Explore our condos with interactive 3D Matterport tours."
    />
  </head>

  <body>
    <SiteHeader phone="(918) 734-3331" />

    <main class="wrap">
      <header class="titlebar">
        <h1 class="h1">3D Condo Tours</h1>
        <p class="sub">Explore our spaces in a full interactive walk-through.</p>
      </header>

      {tours.map((t) => (
        <section class="card" id={t.id} aria-label={t.title}>
          <h2 class="h2">{t.title}</h2>

          <div class="embed" aria-label={`${t.title} embed`}>
            <iframe
              src={t.src}
              title={t.title}
              loading="lazy"
              allowfullscreen
              allow="fullscreen; xr-spatial-tracking"
              referrerpolicy="no-referrer-when-downgrade"
            ></iframe>
          </div>

          <p class="openRow">
            <a class="openLink" href={t.src} target="_blank" rel="noopener">
              Open in Matterport â†’
            </a>
          </p>
        </section>
      ))}
    </main>

    <SiteFooter phone="(918) 734-3331" email="coastalbeachretreats@gmail.com" />

    <style>
      .wrap {
        max-width: 1440px;
        margin: 0 auto;
        padding: 12px 10px;
      }

      .titlebar { margin: 10px 0 14px; }
      .h1 {
        margin: 0 0 6px;
        font-size: 34px;
        line-height: 1.1;
        color: var(--brand-blue, #193e7f);
      }
      .sub { margin: 0; opacity: .85; }

      .card {
        border: 1px solid rgba(0,0,0,.12);
        border-radius: 16px;
        padding: 14px;
        background: #fff;
        box-shadow: 0 6px 18px rgba(0,0,0,.06);
        margin: 14px 0;
      }

      .h2 {
        margin: 0 0 10px;
        font-size: 24px;
        color: var(--brand-blue, #193e7f);
      }

      /* Responsive 16:9 iframe */
      .embed {
        position: relative;
        width: 100%;
        padding-top: 56.25%;
        border-radius: 14px;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,.12);
        background: rgba(0,0,0,.04);
      }
      .embed iframe {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        border: 0;
        display: block;
      }

      .openRow { margin: 10px 0 0; }
      .openLink {
        font-weight: 800;
        text-decoration: none;
        color: rgba(25,62,127,.85);
      }
      .openLink:hover { color: var(--brand-blue, #193e7f); }

      @media (max-width: 980px) {
        .wrap { padding: 12px 12px; }
      }
    </style>
  </body>
</html>
